<%- include('../partials/header-start.ejs') %> <%-
include('../partials/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="tree glass-bg">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">
            <a class="jumper" href="#skillData">See skill details</a>
          </li>
          <li class="breadcrumb-item">
            <a class="jumper" href="#projects">See projects</a>
          </li>
        </ol>
      </div>
    </div>
    <div class="col-md-6">
      <div class="skillLevel glass-bg">
        <h5>
          <i class="fas fa-graduation-cap"></i> Skill level :
          <%=skillData.skillLevel %>%
        </h5>
      </div>
    </div>
  </div>

  <div class="row">
    <div id="skillData" class="col-md-5">
      <div class="glass-bg p-3">
        <div class="text-center">
          <img
            class="card-icons"
            src="<%= skillData.icon %>"
            alt="skill icon"
          />
          <h5><%= skillData.skillName %></h5>
        </div>
        <hr />
        <code><%= skillData.skillDes %></code>
        <hr />
        <code><%= skillData.skillProgress %></code>
      </div>
    </div>
    <div id="projects" class="col-md-7">
      <div class="glass-bg py-4 px-3">

        <!-- heading -->
        <div class="text-center">
          <i class="fas fa-project-diagram fa-2x mb-3"></i>
          <h5>My <%= skillData.skillName %> Projects</h5>
        </div>

        <hr />

        <!-- projects list -->
        <div>
          <div class="accordion" id="projectView">
            <% skillData.projectView.forEach((project, index) => { %>
            <div class="accordion-item">
              <h2 class="accordion-header">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#<%= project.id %>"
                >
                <i class="fas fa-project-diagram"></i>
                <span class="px-2">Project : <%= project.name %></span>
                </button>
              </h2>

              <div id="<%= project.id %>" class="accordion-collapse collapse" data-bs-parent="#projectView">
                <div class="accordion-body">
                  <div>
                    <h6>Project description : </h6>
                    <code><%= project.des %></code>
                  </div>
                  <hr>
                  <h6>Project video : </h6>
                  <div class="text-center">
                    <iframe
                      class="project-player"
                      src="https://www.youtube.com/embed/<%= project.video %>"
                      title="YouTube video player"
                      frameborder="0"
                      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                      allowfullscreen
                    ></iframe>
                  </div>
                  <hr>
                  <div>
                    <h6>Made with : </h6>
                    <code><%= project.madeWith %></code>
                  </div>
                  <hr>
                  <div class="text-center">
                    <a  target="_blank" href="<%= project.preview %>" class="btn btn-dark btn-sm">Preview</a>
                    <a  target="_blank" href="<%= project.github %>" class="btn btn-danger btn-sm">Github Repository</a>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/header-end.ejs') %> <%-
include('../partials/footer.ejs') %>
